{
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "allowUnsandboxedCommands": false,
    "network": {
      "allowLocalBinding": true
    }
  },
  "permissions": {
    "allow": [
      "Write(**)",
      "Read(**)",
      "Bash(pip *)",
      "Bash(python *)",
      "Bash(pytest *)",
      "Bash(git *)",
      "Bash(mkdir *)",
      "Bash(dir *)",
      "Bash(type *)",
      "Bash(copy *)",
      "Bash(del *)",
      "WebFetch(**)"
    ],
    "deny": [
      "Bash(sudo *)",
      "Bash(docker *)",
      "Bash(rm -rf *)",
      "Read(~/.ssh/**)",
      "Read(~/.aws/**)",
      "Read(.env)"
    ],
    "ask": []
  }
}
